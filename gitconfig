[alias]
	a = add
	apa = add --patch
	b = branch
	c = commit -v
	ca = commit -v -a
	cm = checkout master
	co = checkout
	d = diff
	dca = diff --cached
	f = fetch
	l = pull
	lgga = log --graph --decorate --all
	p = push
	r = remote
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase -i
	st = status
	sta = stash
	stp = stash pop
[core]
	attributesfile = ~/.gitattributes_global
	excludesfile = ~/.gitignore_global
	editor = vim
	pager = less -F -R -X
	precomposeunicode = true
	quotepath = false
[color]
	ui = auto
[diff]
	renames = true
[diff "utf-16"]
	textconv = iconv -f utf-16 -t utf-8
[difftool]
	prompt = false
[fetch]
	prune = true
[include]
	path = ~/.gitconfig.local
[log]
	date = iso8601
[push]
	default = simple
