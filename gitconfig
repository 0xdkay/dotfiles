[core]
	attributesFile = ~/.gitattributes_global
	autocrlf = false
	excludesFile = ~/.gitignore_global
	editor = vim
	pager = less -F -R -X
	precomposeUnicode = true
	quotePath = false
[color]
	ui = auto
[commit]
	verbose = true
[diff]
	compactionHeuristic = true
	renames = true
	submodule = log
[diff "utf-16"]
	textconv = iconv -f utf-16 -t utf-8
[difftool]
	prompt = false
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
	templateDir = ~/.git-templates
[interactive]
	diffFilter = diff-highlight
[log]
	date = iso8601
[pager]
	diff = diff-highlight | $(git config core.pager)
	log = diff-highlight | $(git config core.pager)
	show = diff-highlight | $(git config core.pager)
[pull]
	ff = only
[push]
	default = simple
[rebase]
	autoStash = true
	autoSquash = true
[rerere]
	enabled = true
[sendemail]
	confirm = always
	suppresscc = self
[stash]
	showPatch = true
[status]
	showStash = true
[submodule]
	fetchJobs = 0
[user]
	useConfigOnly = true
[include]
	path = ~/.gitconfig.user
	path = ~/.gitconfig.local
